<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WebRTC Video Chat</title>
    <script>
      const ROOM_ID = `<%= roomId %>`;
    </script>
    <script
      defer
      src="https://unpkg.com/peerjs@1.2.0/dist/peerjs.min.js"
    ></script>
    <script src="https://cdn.socket.io/3.0.1/socket.io.js" defer></script>
    <script src="script.js" defer></script>
    <style>
      #video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, 300px);
        grid-auto-rows: 300px;
      }

      video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border: 2px;
        border-color: #000;
      }

      #share-screen {
        width: 200px;
        height: 100px;
        padding: 2px;
        background: #000;
        color: azure;
        cursor: pointer;
      }

      #share-screem:hover > {
        opacity: 20;
      }

      #screen-video {
        border: #000;
        width: 300px;
        height: 300px;
        border: 0cqmax;
      }
    </style>
  </head>
  <body>
    <div id="video-grid">Room</div>
    <button id="share-screen">Share Screen</button>
    <div id="screen-video">Video</div>
  </body>
</html>
